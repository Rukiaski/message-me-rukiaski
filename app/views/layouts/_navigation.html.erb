<div class="ui container">
    <% if logged_in?%>
        <%= link_to "Chatroom", root_path, class: "item"%>
        <div class="ui simple dropdown item">
            Friends
            <i class="dropdown icon"></i>
            <div class="menu">
            <div class="item labeled icon button"><i class="user plus icon"></i>Add Friends</div>
            <div class="item labeled icon button"><i class="users icon"></i>All Friends</div>
            <div class="item labeled icon button"><i class="user circle icon"></i>Online Friends</div>
            </div>
        </div>
    <% end %>
    <%= link_to "About Us", about_path, class: "item"%>
    <div class="right menu">
        <div class="item">
            <div class="ui icon input">
            <input type="text" placeholder="Search...">
            <i class="search link icon"></i>
            </div>
        </div>
        <% if !logged_in? %>
            <%= link_to "Login", login_path, class:"ui item"%>
        <% else %>
            <%= link_to "Logout", logout_path, method: :delete, class: "ui item"%>    
        <% end %>
        <% if !logged_in? %>
            <div class="item">
                <%= link_to "Sign Up!", login_path, class: "ui inverted violet button"%>
            </div>
        <% end %>        
    </div>
</div>